const int buttonPins[3] = {2, 3, 4};
const int ledPins[3] = {8, 9, 10};

void setup() {
  for (int i = 0; i < 3; i++) {
    pinMode(buttonPins[i], INPUT);
    pinMode(ledPins[i], OUTPUT);
  }
}

void loop() {
  for (int i = 0; i < 3; i++) {
    int buttonState = digitalRead(buttonPins[i]);
    digitalWrite(ledPins[i], buttonState);
  }
}
